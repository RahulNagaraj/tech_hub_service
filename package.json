{
	"name": "tech_hub_service",
	"version": "1.0.0",
	"description": "An event management app using node, GraphQL and MongoDB",
	"repository": "https://github.com/RahulNagaraj/tech_hub_service.git",
	"author": "Rahul N <rahul.nagarajmv@gmail.com>",
	"main": "server/app.js",
	"license": "MIT",
	"dependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.0",
		"cross-env": "^7.0.2",
		"graphql-yoga": "^1.18.3",
		"mongoose": "^5.9.7",
		"nodemon": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2"
	},
	"nodemonConfig": {
		"exec": "npm run dev",
		"watch": [
			"server/*"
		],
		"ignore": [
			"**/__tests__/**",
			"*.test.js",
			"*.spec.js"
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"scripts": {
		"start": "npm run prod",
		"build": "npm-run-all clean transpile",
		"server": "node ./dist/app",
		"dev": "cross-env NODE_ENV=development npm-run-all build server",
		"prod": "cross-env NODE_ENV=production npm-run-all build server",
		"transpile": "babel ./server --out-dir dist",
		"clean": "rimraf dist-server",
		"watch:dev": "nodemon"
	}
}
